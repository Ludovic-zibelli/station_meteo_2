{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
	<div class="container text-center">
	<div class="card" style="width: 25rem;">
		{% if error %}
			<div class="alert alert-danger">
				{{ error.messageKey | trans(error.messagedata, 'security') }}
			</div>
		{% endif %}
		<form action="{{ path ('login')}}" method="post" class="form-signin">
			<img class="mb-4" src="{{ asset('/images/logo_meteo.png') }}" alt="" width="90" height="90">
			<h1 class="h3 mb-3 font-weight-normal">Connecter-vous</h1>
			<div class="form-group">
				<label for="username" class="sr-only">E-mail</label>
				<input type="text" id="username" name="_username" class="form-control" value="{{ last_user }}" placeholder="Votre E-mail" required autofocus>
			</div>
			<div class="form-group">
				<label for="password" class="sr-only">Mot de passe</label>
				<input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" required>
			</div>
			<button type="submit" class="btn btn-primary">Se connecter</button>
		</form>
		</div>
	</div>
{% endblock %}