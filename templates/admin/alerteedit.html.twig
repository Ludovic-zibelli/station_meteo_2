{% extends 'base.html.twig' %}

{% block title %}Modifier une alerte Météo{% endblock %}

{% block body %}
    <div class="container-fluid">
        <a href="{{ path('admin') }}">Retour</a>
        <div class="card">
            <div class="card-header">
                <h1 class="text-center card-title titre">Modifier l'alerte</h1>
            </div>
            <div class="card-body">
                {{ form_start(form)}}
                {{ form_widget(form) }}
                <button class="btn btn-primary btn-block" type="submit">Modifier</button>
                {{ form_end(form)}}
            </div>
        </div>
    </div>

{% endblock %}