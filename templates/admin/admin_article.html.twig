{% extends 'base.html.twig' %}

{% block title %}Gestion des articles{% endblock %}

{% block body %}

<div class="container-fluid mt-10">
	{% for message in app.flashes('success')%}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	<h2 class="text-center titre">Gérer les articles</h2>
	<div class="row">
		<div class="col-4">
			<a href="{{ path ('admin.articles.add')}}" class="btn btn-primary">Crée un nouvelle article</a>
		</div>
		<div class="col-4">
			<a href="{{ path ('admin.articles.category')}}" class="btn btn-primary">Gérer les categories</a>
		</div>
		<div class="col-4"></div>
	</div>
	<br>			
	<div class="row">
		<div class="col-12">
			
			<table class="table table-striped">
				<thead>
					<tr>
						<td>Titre de l'article</td>
						<td>Actions</td>
					</tr>
				</thead>
				<tbody>
					{% for article in articles %}
					<tr>
						<td>{{ article.titre }}</td>
						<td>
							<a href="{{ path ('admin.articles.edit', {id: article.id})}}" class="btn btn-primary">Editer</a>
							<form method="POST" action="{{ path ('admin.articles.delete', {id: article.id})}}" style="display:inline-block">
								<input type="hidden" name="_method" value="DELETE">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id)}}">
								<button class="btn btn-danger">Supprimer</button>
							</form>
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>


{% endblock %}