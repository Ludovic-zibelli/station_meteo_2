{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="container">
        <h1 class="text-center titre">Ajouter un nouvelle utilisateur</h1>
        <div class="row">
            <div class="col-6">
                <p>Nom</p>
                {{ form_widget(form.nom) }}
            </div>
                <div class="col-6">
                    <p>Prenom</p>
                    {{ form_widget(form.prenom) }}
                </div>
                <div class="col-12">
                    <p>E-mail</p>
                    {{ form_widget(form.email) }}
                </div>
                <div class="col-12">
                    <p>Mot de passe</p>
                    {{ form_widget(form.password) }}
                </div>

            </div>
            <br>
            <div class="col-12">
                <button class="btn btn-primary btn-block" type="submit">Enregistrer l'utilisateur</button>
            </div>
        </div>





    </div>
    {{ form_end(form) }}
{% endblock %}