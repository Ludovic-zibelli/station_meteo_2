{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="jumbotron">
        <h1 class="card-title text-center">ARTICLES</h1>
    </div>
    <div class="row">
        <div class="col-12">
            {% for article in articles %}
            <div class="card mb-3" ">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        {% if article.image %}
                            <img src="{{ vich_uploader_asset(article, 'imageFile') }}"  width=100% height=auto alt="{{ article.titre }}">
                        {% else %}
                            <img src="{{ asset('/images/logo_meteo.png') }}" width=150 height=150 class=" " alt="{{ article.titre }}">
                        {% endif %}
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.titre }}</h5>
                            <p class="card-text">{{ article.content|striptags|slice(0, 100)|raw  }}</p>
                            <p class="card-text"><small class="text-muted"><a href="{{ path('article.show', {id: article.id}) }}">Lire la suite</a></small></p>
                            <p class="card-text text-center">Auteur de l'article {{ article.auteur }}|Editer le {{ article.CreatedAt|date("d/m/Y H:i") }}</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}