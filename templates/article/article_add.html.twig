{% extends 'base.html.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block body %}
	<div class="container">
		<a href="{{ path ('admin.article')}}" class="">Retour</a>
		<div class="card">
			<div class="card-body">
				<h2 class="text-center card-title titre">Ajouter un article</h2>
				<form method="post" enctype="multipart/form-data">
					{{ form_start(form)}}
					<div class="row">
						<div class="col-md-12 col-sm-12 col-lg-12">
							<h6 class="card-subtitle mb-2 text-muted">Titre de l'article :</h6>
							{{ form_widget(form.titre) }}
						</div>
						<div class="col-md-12 col-sm-12 col-lg-12">
							<h6 class="card-subtitle mb-2 text-muted">Auteur de l'article :</h6>
							{{ form_widget(form.auteur) }}
						</div>
						<div class="col-md-12 col-sm-12 col-lg-12">
							<h6 class="card-subtitle mb-2 text-muted">Category de l'article :</h6>
							{{ form_widget(form.category)}}
						</div>
						<div class="col-md-12 col-sm-12 col-lg-12">
							<h6 class="card-subtitle mb-2 text-muted">Mettre en ligne :</h6>
							{{ form_widget(form.online)}}
						</div>
						<div class="col-md-12 col-sm-12 col-lg-12">
							<h6 class="card-subtitle mb-2 text-muted">Contenu de l'article :</h6>
							{{ form_widget(form.content)}}
						</div>
						<div class="col-md-12 col-sm-12 col-lg-12">
							<h6 class="card-subtitle mb-2 text-muted">Ajouter une image :</h6>
							{{ form_widget(form.imageFile)}}
						</div>
					</div>
					<div class="row bouton_add_sauv">

						<div class="col-md-12 col-sm-12 col-lg-12">
							<button type="submit" class="btn btn-primary btn-lg btn-block">Sauvegarder</button>
						</div>
					</div>
			</div>
		</div>
	</div>

{{ form_end(form) }}
	</form>
{% endblock %}